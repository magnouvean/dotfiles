{
    "name": "Godot-Sharp",
    "dockerFile": "Dockerfile",
    "runArgs": [
        "--gpus=all"
    ],
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csdevkit",
                "woberg.godot-dotnet-tools"
            ],
            "settings": {
                "godot-dotnet-tools.executablePath": "/usr/bin/godot"
            }
        }
    }
}